<div class="container">
  <div class="row">
    <div class="col-xs-4 artist-show">
      <h1> <%= @artist.name %> </h1>
      <% @artist.photos.each do |photo| %>
          <%= image_tag photo.image.thumbnail %>
      <% end %>
      <hr>
      <h2>Biography</h2>
      <p><%= @artist.bio %></p>
    </div>

    <div class="col-md-8">
      <h2> List of Songs: </h2>
      <p><%= link_to "Add song", new_artist_song_path(@artist), class: "btn btn-success" %></p>

      <% @artist.songs.each do |song| %>

      <h3><%= link_to song.name, artist_song_path(song.artist, song)  %></h3>
      <audio controls>
        <source src="<%= song.url %>" type="audio/mpeg" />
        <a href="<%= song.url %>"><%= song.name %></a>
      </audio>
      <br>
      <%= link_to 'Edit', edit_artist_song_path(song.artist, song), class: "btn btn-primary" %>
      <%= link_to 'Delete', [song.artist, song], data: {confirm: "Are you sure you want to delete this song?" }, :method => :delete, class: "btn btn-primary"  %>
      <hr/>

    <% end %>
    </div>

  </div>


  <%= link_to "Edit artist", edit_artist_path, class: "btn btn-success" %>
  <%= link_to "Delete artist", artist_path(@artist.id), method: :delete, data: {confirm: "NOTE: Deleting an artist will delete all associated songs. \nDo you wish to continue?" }, class: "btn btn-danger" %>
</div>
